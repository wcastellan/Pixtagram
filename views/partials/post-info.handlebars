<article class="post">
  <div class="post-user-info">
    <div id="post-username">
      {{user.username}}
    </div>
    <div id="post-created-at">
      {{format_date created_at}}
    </div>
  </div>
  <div class="post-pic">

  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>